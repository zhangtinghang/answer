<!--pages/classify/classify.wxml-->
<view class="container">
    <view class='main'>
      <view class='title'>主题分类</view>
      <view class="list {{currentItem==1?'active-tag':''}}" data-type='1'  bindtap='list'><text>监察法知识</text><image src='../../images/index/icon_right.png'></image></view>
      <view class="list {{currentItem==2?'active-tag':''}}" data-type='2' bindtap='list'><text>宪法知识</text><image src='../../images/index/icon_right.png'></image></view>
      <view class="list {{currentItem==3?'active-tag':''}}" data-type='3' bindtap='list' wx:if="{{isParty}}"><text>新党章知识</text><image src='../../images/index/icon_right.png'></image></view>
