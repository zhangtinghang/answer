      <view class="list {{currentItem==7?'active-tag':''}}" data-type='7' bindtap='list' wx:if="{{isParty}}"><text>中国共产党问责条例知识</text><image src='../../images/index/icon_right.png'></image></view>
      <view class="list {{currentItem==8?'active-tag':''}}" data-type='8' bindtap='list' wx:if="{{isParty}}"><text>中国共产党巡视工作条例知识</text><image src='../../images/index/icon_right.png'></image></view>
      <view class="list {{currentItem==9?'active-tag':''}}" data-type='9' bindtap='list' wx:if="{{isParty}}"><text>关于新形势下党内政治生活的若干准则</text><image src='../../images/index/icon_right.png'></image></view>
    </view>
</view>
