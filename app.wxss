/**app.wxss**/
page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background-color: rgb(235,235,235);
  font-family: PingFangSC-Regular;
  padding-top:2%;
  overflow: hidden;
}
button{
  border: none !important;
}
.container{
  margin: 0 auto;
  width: 96%;
  height: 97%;
  background-color: #fff;
}
.popui__modal-panel{
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
}
.popui__modal-mask{
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9;
  display: flex;
  align-items: center;
}
.popui__modal-main{
  background-color: #fff;
  position: absolute;
  z-index: 99;
  width: 74%;
  height: 563rpx;
  top:50%;
  left: 13%;
  transform:translateX(-50%);
  transform:translateY(-50%);
}
.popui__modal-title{
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #ebebeb;
}
.popui__modal-content-list{
  width: 400rpx;
	height: 80rpx;
	border-radius: 40rpx;
	border: solid 2rpx #ff0000;
  margin: 0 auto;
  text-align: center;
  vertical-align: middle;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 57rpx;
  color: #FF0000;
}
.popui__modal-footer{
  margin: 56rpx auto;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 400rpx;
	height: 80rpx;  
	border-radius: 40rpx;
	border: solid 2rpx #ff0000 !important;
  font-family: PingFangSC-Regular;
	font-size: 36rpx;
	color: #ff0000 !important;
}
.button-hover {
  color: #fa9494 !important;
  border-color: #fa9494 !important;
}
